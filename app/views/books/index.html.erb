<!DOCTYPE html>
<html>
  <head>
    <title>WebCampBackendNew</title>
  </head>

  <body>
    <p id="notice"></p>
    <h1>Books</h1>
    <table>
      <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
      <% @books.each do |book| %>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      </tr>
     <% end %>
     


  </tbody>
    </table>

      <h2>New Book</h2>
      <%= form_with model: @book ,local:true do |f| %>
      <h4>title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>

  </body>
</html>
